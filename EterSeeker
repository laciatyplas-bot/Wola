<script>
(function(){
  'use strict';

  // toggle pojedynczej książki
  document.querySelectorAll('.book').forEach(book=>{
    book.addEventListener('click', ()=>{
      book.classList.toggle('open');
    });
  });

  // toggle całej bramy ENTER / KLIK
  document.querySelectorAll('.brama-title').forEach(title=>{
    title.tabIndex = 0;
    title.addEventListener('click', toggle);
    title.addEventListener('keydown', e=>{
      if(e.key==='Enter' || e.key===' '){
        e.preventDefault();
        toggle.call(title);
      }
    });

    function toggle(){
      const card = title.closest('.brama-card');
      if(!card) return;
      const books = card.querySelectorAll('.book');
      const open = Array.from(books).some(b=>!b.classList.contains('open'));
      books.forEach(b=>b.classList.toggle('open', open));
    }
  });
})();
</script>

